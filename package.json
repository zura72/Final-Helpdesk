{
  "name": "wki-monorepo",
  "private": true,
  "workspaces": ["server", "stok-inventory", "web"],
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n SVR,ADM,WEB -c green,magenta,cyan \"npm:dev:server\" \"npm:dev:stok\" \"npm:dev:web\"",
    "dev:server": "npm run dev -w server",
    "dev:stok": "npm run dev -w stok-inventory",
    "dev:web": "npm run dev -w web",
    "build": "npm run build -w stok-inventory && npm run build -w web"
  },
  "devDependencies": {
    "concurrently": "8.2.2"
  }
}
